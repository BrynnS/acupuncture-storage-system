<scroll-view scroll-y class="scrollPage">
	<view class="UCenter-bg">
		<image src="/images/logo.png" class="png" mode="widthFix"></image>
		<view class="text-xl">针灸师的小助手
			<text class="text-df">v2.0</text>
		</view>
		<view class="margin-top-sm">
			<text>By:马昕</text>
		</view>
		<image src="/images/wave.gif" mode="scaleToFill" class="gif-wave"></image>
	</view>
	<view class="padding flex text-center text-grey bg-white shadow-warp">
		<view class="flex flex-sub flex-direction solid-right">
			<view class="text-xxl text-orange">{{abnormal}}</view>
			<view class="margin-top-sm">
				<text class="cuIcon-warnfill"></text> 异常设备</view>
		</view>
		<view class="flex flex-sub flex-direction solid-right">
			<view class="text-xxl text-blue">{{run}}</view>
			<view class="margin-top-sm">
				<text class="cuIcon-refresh"></text> 运行中设备</view>
		</view>
		<view class="flex flex-sub flex-direction">
			<view class="text-xxl text-green">{{connect}}</view>
			<view class="margin-top-sm">
				<text class="cuIcon-wifi"></text> 已连接设备</view>
		</view>
	</view>
	<view class="cu-list menu card-menu margin-top-xl margin-bottom-xl shadow-lg radius">
		<view class="cu-item arrow">
			<navigator class="content" url="/pages/about/group/group" hover-class="none">
				<text class="cuIcon-profile text-grey"></text>
				<text class="text-grey">关于团队</text>
			</navigator>
		</view>
		<view class="cu-item arrow">
			<navigator class="content" url="/pages/about/acupuncture/acupuncture" hover-class="none">
				<text class="cuIcon-formfill text-green"></text>
				<text class="text-grey">关于针灸</text>
			</navigator>

		</view>
		<view class="cu-item arrow">
			<navigator class="content" url="/pages/about/project/project" hover-class="none">
				<image src="/images/logo.png" class="png" mode="aspectFit"></image>
				<text class="text-grey">关于针灸小助手</text>
			</navigator>
		</view>
		<view class="cu-item arrow">
			<navigator class="content" url="/pages/equipment/equipment" hover-class="none">
				<text class="cuIcon-rankfill text-red"></text>
				<text class="text-grey">管理设备</text>
			</navigator>
		</view>
		<view class="cu-item arrow">
			<navigator class="content" url="/pages/bug/bug" hover-class="none">
				<text class="cuIcon-creativefill text-orange"></text>
				<text class="text-grey">Bug反馈</text>
			</navigator>
		</view>
	</view>
	<view class="cu-tabbar-height"></view>
</scroll-view>